# ===================================
# 미니 노션 환경변수 템플릿
# ===================================
# 이 파일을 복사하여 .env.local 파일을 생성하고 실제 값으로 변경하세요
# cp .env.example .env.local

# ===== 데이터베이스 설정 =====
# PostgreSQL 연결 URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mini_notion?schema=public"

# Redis 연결 URL
REDIS_URL="redis://localhost:6379"

# ===== 인증 설정 =====
# JWT 시크릿 키 (최소 32자, 프로덕션에서는 안전한 랜덤 문자열 사용)
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# JWT 토큰 만료 시간
JWT_EXPIRES_IN="7d"

# ===== 서버 포트 설정 =====
# API 서버 포트
PORT="3001"

# Hocuspocus WebSocket 서버 포트
HOCUSPOCUS_PORT="1234"

# ===== 파일 저장소 설정 (MinIO) =====
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="mini-notion-files"
MINIO_USE_SSL="false"

# ===== 프론트엔드 환경변수 (VITE_ 프리픽스 필수) =====
# API 기본 URL
VITE_API_BASE_URL="http://localhost:3001"

# WebSocket 서버 URL
VITE_WS_URL="ws://localhost:1234"

# 앱 이름
VITE_APP_NAME="Mini Notion"

# 환경 구분
VITE_ENVIRONMENT="development"

# 프론트엔드 포트
VITE_PORT="3000"

# ===== 실시간 협업 설정 =====
# 최대 동시 사용자 수
COLLABORATION_MAX_USERS="100"

# 문서 동기화 간격 (밀리초)
DOCUMENT_SYNC_INTERVAL="5000"

# Hocuspocus 연결 타임아웃 (밀리초)
HOCUSPOCUS_TIMEOUT="30000"

# ===== 이메일 설정 (선택사항) =====
# SMTP 서버 설정
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Mini Notion <noreply@mini-notion.com>"

# ===== 로깅 설정 =====
# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL="info"

# 로그 파일 경로
LOG_FILE_PATH="./logs/app.log"

# ===== 보안 설정 =====
# CORS 허용 도메인 (쉼표로 구분)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting (분당 요청 수)
RATE_LIMIT_MAX="100"

# ===== 개발 도구 설정 =====
# API 문서 활성화 (개발 환경에서만)
ENABLE_API_DOCS="true"

# 디버그 모드
DEBUG="false"

# ===== 프로덕션 전용 설정 =====
# (프로덕션 환경에서만 설정)

# 데이터베이스 SSL 설정
# DATABASE_SSL="true"

# Redis SSL 설정  
# REDIS_TLS="true"

# 세션 시크릿
# SESSION_SECRET="your-session-secret-key"

# 쿠키 보안 설정
# COOKIE_SECURE="true"
# COOKIE_SAME_SITE="strict"

# ===== 모니터링 및 분석 =====
# Sentry DSN (에러 추적)
# SENTRY_DSN="https://your-sentry-dsn"

# Google Analytics ID
# GA_TRACKING_ID="GA-XXXXXXXXX"

# ===== 외부 서비스 연동 =====
# AWS S3 설정 (MinIO 대신 사용시)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="ap-northeast-2"
# AWS_S3_BUCKET="mini-notion-files"

# OAuth 설정 (소셜 로그인)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"