{
  "name": "mini-notion-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "실시간 협업 에디터 - Y.js, Tiptap, Hocuspocus를 활용한 미니 노션",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "pnpm run db:generate && jest --ci --coverage --watchAll=false",
    "test:api": "jest --testPathPattern=\"api.*test\"",
    "test:performance": "jest --testPathPattern=\"performance.*test\"",
    "test:integration": "jest --testPathPattern=\"integration.*test\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "type-check:changed": "bash ./scripts/type-check-changed.sh",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@eslint/js": "^9.35.0",
    "@jest/globals": "^30.1.2",
    "@next/eslint-plugin-next": "^15.5.3",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@turbo/gen": "^2.5.6",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^14.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
