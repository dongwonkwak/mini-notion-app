{
  "name": "@editor/database",
  "version": "0.1.0",
  "private": true,
  "description": "데이터베이스 스키마 및 쿼리",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:validate": "tsx scripts/validate-schema.ts",
    "db:test": "jest --testPathPattern=__tests__"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@editor/types": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "ts-jest": "^29.2.5",
    "eslint": "^9.17.0",
    "chalk": "^5.3.0"
  }
}