{
  "name": "@editor/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "데이터베이스 스키마 및 쿼리",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "prisma generate",
    "pretype-check": "prisma generate",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts --config ../../eslint.config.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:validate": "tsx scripts/validate-schema.ts",
    "db:test": "jest --testPathPattern=__tests__"
  },
  "dependencies": {
    "@editor/types": "workspace:*",
    "@prisma/client": "^6.16.1",
    "ioredis": "^5.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "chalk": "^5.6.2",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "prisma": "^6.16.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
